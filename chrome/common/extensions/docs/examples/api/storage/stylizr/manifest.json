{
  "name": "Stylizr",
  "description": "Spruce up your pages with custom CSS.",
  "version": "1.0",

  "permissions": [
    "storage",
    "tabs",
    "<all_urls>"
  ],

  "options_page": "options.html",

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Stylize!",
    "default_popup": "popup.html"
  },

  "manifest_version": 2
}
